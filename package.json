{
  "name": "pet_adoption_back_end",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "start": "node --enable-source-maps ./dist/index",
    "lint": "eslint . --ext .ts",
    "test": "NODE_ENV=test jest --runInBand"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cloudinary": "^1.35.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.1.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "yup": "^1.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.15.3",
    "@types/uuid": "^9.0.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-files": "^1.1.3",
    "typescript": "^4.9.5"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/../src"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "yarn eslint --max-warnings=0",
      "tsc-files --noEmit",
      "prettier src/** --write",
      "git add ."
    ],
    "*.ts": "eslint --cache --fix",
    "*.{js,md}": "prettier --write"
  },
  "author": "ezra rubio",
  "license": "MIT"
}
